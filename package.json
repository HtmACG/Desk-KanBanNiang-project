{
  "name": "desk-kanbanniang",
  "version": "1.8.0",
  "description": "desk-kanbanniang",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . Desk-KanbanNiang --platform=win32 --arch=x64 --out=out --icon=project/icon/icon.ico --overwrite",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.deskkanbanniang",
    "productName": "Desk-KanbanNiang",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "project/icon/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "ms": "^2.1.3"
  },
  "author": "HtmACG <your.email@example.com>"
}
